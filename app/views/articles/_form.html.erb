<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li> <%= msg%></li>
    <% end %>
</ul>
<% end %>


<%= form_for @article do |a| %>
  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= a.label :title %>
    </div>
    <div class=" col-sm-8">
      <%= a.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= a.label :description %>
    </div>
    <div class="col-sm-8">
      <%= a.text_area :description, class: "form-control", rows: 10, placeholder: "Body of article" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= a.submit class: 'btn btn-dark btn-lg' %>
    </div>
  </div>
<% end %>
<div class="form-group row">
  <div class=" col-sm-4 offset-sm-4">
    [ <%= link_to 'Cancel and return to articles listing', articles_path %> ]
  </div>
</div>