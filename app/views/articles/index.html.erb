<h1 align="center">Listing all Articles</h1>

<% @articles.each do |article| %>
  <div class="card bg-light col-sm-6 offset-3 mt-2">
    <h5 class="card-title article-title">
      <%= link_to article.title, article_path(article) %>
    </h5>
    <div class="card-text article-body">
      <%= article.description %><br/>
        <div class="article-meta-details">
        <small>Created by: <%= article.user.username if article.user %>
          <%= time_ago_in_words(article.created_at) %> ago,
          last updated: <%= time_ago_in_words(article.updated_at) %> ago</small>
         </div> 
      </div>
    <div class="article-actions">
      <%= link_to 'Edit this article', edit_article_path(article), class: "btn btn-sm btn-primary" %>
      <%= link_to 'Delete this article', article_path(article), method: :delete,
                            data: {confirm: "Are you sure"}, 
                            class: "btn btn-sm btn-danger" %>
    </div>
  </div>
<% end %>
