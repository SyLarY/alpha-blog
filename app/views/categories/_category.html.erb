<div class="center">
    <% obj.each do |category| %>
    <div class="card bg-light col-sm-4 offset-4 mt-2 row">
        <div class="card-title article-title">
            <%= link_to "#{category.name}", category_path(category) %>
            <%= link_to 'X', category_path(category), method: :delete,
                                data: {confirm: "Are you sure?"}, 
                                class: "btn btn-sm btn-danger", 
                                style:"float: right" %>
        </div>
    </div>
    <% end %>
</div>