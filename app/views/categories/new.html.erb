<h1 align="center">Create Category</h1>

 <%= render 'shared/errors', obj: @category %>

<%= form_for @category do |a| %>

  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= a.label :name %>
    </div>
    <div class=" col-sm-8">
      <%= a.text_field :name, class: "form-control", placeholder: "Enter Category Name", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= a.submit class: 'btn btn-dark btn-lg' %>
    </div>
  </div>

<% end %>

<div class="form-group row">
  <div class=" col-sm-4 offset-sm-4">
    [ <%= link_to 'Cancel and return to articles listing', articles_path %> ]
  </div>
</div>