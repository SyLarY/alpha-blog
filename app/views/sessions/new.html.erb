<h1 align="center">Log in</h1>

<%= form_for(:session, url: login_path) do |a| %>

  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= a.label :email %>
    </div>
    <div class="col-sm-8">
      <%= a.email_field :email, class: "form-control", placeholder: "Enter Email" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= a.label :password %>
    </div>
    <div class="col-sm-8">
      <%= a.password_field :password, class: "form-control", placeholder: "Enter Password" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= a.submit "Login", class: 'btn btn-dark btn-lg' %>
    </div>
  </div>

<% end %>