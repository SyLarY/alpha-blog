<% if obj.errors.any? %>
  <div class="row mb-4">
    <div class="col-xs-8 offset-2">
      <div class="card text-danger">
        <div class="card-header">
          <h2 class="card-title">
            <%= pluralize(obj.errors.count, "error") %>
              prohibied this article from being saved:
          </h2>
          <div class="card-body">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li> <%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>