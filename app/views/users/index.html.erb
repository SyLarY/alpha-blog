<h1 align="center">All Alpha Bloggers</h1>
<div class="row col-md-2 offset-md-5 mt-5">
    <%= will_paginate %>
</div>

<% @users.each do |user| %>
    <div class="card bg-light col-sm-4 offset-sm-4 mt-2 center">
        <h5 class="card-title article-title">
        <%= link_to gravatar_for(user, size: 80), user_path(user) %><br/>
        <%= link_to user.username, user_path(user) %>
        </h5>
        <div class="card-text">
        <small><%= pluralize(user.articles.count, 'article') %> </small>
        </div>
        <% if logged_in? and current_user.admin? %>
        <%= link_to 'Delete User', user_path(user), method: :delete, 
                                data: {confirm: "Are you sure?"},
                                class: "btn btn-sm btn-danger col-sm-4 offset-sm-4 my-2" %>
        <% end %>
    </div>
<% end %>

<div class="row col-md-2 offset-md-5 mt-5">
    <%= will_paginate %>
</div>