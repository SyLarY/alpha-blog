<h1 align="center"> Signup for Alpha Bloh</h1>

<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |a| %>

  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= a.label :username %>
    </div>
    <div class=" col-sm-8">
      <%= a.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= a.label :email %>
    </div>
    <div class="col-sm-8">
      <%= a.email_field :email, class: "form-control", placeholder: "Enter Email" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-form-label col-sm-2">
      <%= a.label :password %>
    </div>
    <div class="col-sm-8">
      <%= a.password_field :password, class: "form-control", placeholder: "Enter Password" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= a.submit "Sign Up", class: 'btn btn-dark btn-lg' %>
    </div>
  </div>

<% end %>

<div class="form-group row">
  <div class=" col-sm-4 offset-sm-4">
    [ <%= link_to 'Cancel and return to articles listing', articles_path %> ]
  </div>
</div>